# 🏛️ GoMuseum Staging Environment Configuration
# Copy this file to .env and update with your actual values

# ===== 基础配置 =====
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# ===== 数据库配置 =====
DATABASE_URL=postgresql://gomuseum:your_db_password@postgres:5432/gomuseum_staging
POSTGRES_DB=gomuseum_staging
POSTGRES_USER=gomuseum
POSTGRES_PASSWORD=your_secure_db_password

# ===== Redis 配置 =====
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your_redis_password

# ===== 认证和安全 =====
SECRET_KEY=your_super_secret_key_for_jwt_signing_at_least_32_characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# ===== AI服务API密钥 =====
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===== 业务配置 =====
FREE_QUOTA_LIMIT=5
PREMIUM_QUOTA_LIMIT=100
ENTERPRISE_QUOTA_LIMIT=1000

# ===== 监控配置 =====
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=your_grafana_admin_password
MONITORING_RETENTION_DAYS=30

# ===== 外部服务配置 =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password

# ===== 文件存储 =====
FILE_UPLOAD_MAX_SIZE=10485760  # 10MB
IMAGE_UPLOAD_PATH=/app/uploads/images

# ===== 性能调优 =====
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
CACHE_TTL_SECONDS=3600
RATE_LIMIT_PER_MINUTE=60

# ===== GitHub仓库 =====
GITHUB_REPOSITORY=your-username/GoMuseum

# ===== 域名配置 =====
API_DOMAIN=api-staging.gomuseum.com
APP_DOMAIN=app-staging.gomuseum.com
DOCS_DOMAIN=docs-staging.gomuseum.com

# ===== SSL证书配置 =====
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===== 备份配置 =====
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=gomuseum-backups-staging
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1